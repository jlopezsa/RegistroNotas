<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1500dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                style="@style/EstiloEtiqueta"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:text="Disciplina" />

            <EditText
                android:id="@+id/txt_disciplina"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="digitales" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                style="@style/EstiloEtiqueta"
                android:layout_height="match_parent"
                android:layout_weight="0"
                android:text="Alumno" />

            <EditText
                android:id="@+id/txt_alumno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Julian Lopez" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_ingresa_alumno"
            style="@style/EstiloBoton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresar Alumno" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Ingreso de Notas Corte 1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                style="@style/EstiloEtiqueta"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="AutoevaluaciÃ³n" />

            <EditText
                android:id="@+id/txt_autoevaluacion"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                style="@style/EstiloEtiqueta"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Trabajos" />

            <EditText
                android:id="@+id/txt_trabajos"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="3" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                style="@style/EstiloEtiqueta"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:text="Parcial" />

            <EditText
                android:id="@+id/txt_parcial"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="4" />

        </LinearLayout>

        <Button
            android:id="@+id/btn_notas"
            style="@style/EstiloBoton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ingresar Nota" />

        <Button
            android:id="@+id/btn_regresar"
            style="@style/EstiloBoton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Regresar" />

    </LinearLayout>

</ScrollView>